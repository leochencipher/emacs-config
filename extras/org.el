         (org-mode . flyspell-mode))    ; spell checking!

  :bind (:map global-map
	      ("C-c o a" . org-agenda)
	      ("C-c o c" . org-capture)
              ("C-c l s" . org-store-link)          ; Mnemonic: link → store
              ("C-c l i" . org-insert-link-global)) ; Mnemonic: link → inset
  :custom-face
